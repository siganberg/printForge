{
  "name": "printforge",
  "version": "1.0.0",
  "description": "PrintForge - Electron app for printer management with hub-and-spoke architecture",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:vue\"",
    "dev:hot": "concurrently \"npm run dev:electron:watch\" \"npm run dev:vue\"",
    "dev:hot:headless": "concurrently \"npm run dev:headless\" \"npm run dev:vue\"",
    "dev:headless": "cross-env NODE_ENV=development HEADLESS=true nodemon --watch src/main --ext js,json --exec \"electron .\"",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:electron:watch": "cross-env NODE_ENV=development nodemon --watch src/main --ext js,json --exec \"electron .\"",
    "dev:vue": "vite --config src/renderer/vite.config.js",
    "build": "npm run build:vue && npm run build:electron",
    "build:vue": "vite build --config src/renderer/vite.config.js",
    "build:electron": "electron-builder",
    "preview": "vite preview --config src/renderer/vite.config.js"
  },
  "keywords": [
    "electron",
    "vue",
    "printer",
    "management"
  ],
  "author": "Francis",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1",
    "vite": "^4.4.9"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "basic-ftp": "^5.0.5",
    "better-queue": "^3.8.12",
    "fast-xml-parser": "^5.3.1",
    "mqtt": "^5.3.4",
    "vue": "^3.3.4",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.francis.printforge",
    "productName": "PrintForge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/dist/**/*"
    ]
  }
}
